{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ES2022",
        "baseUrl": "./",
        "rootDir": "./src",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true
    },
    "exclude": [
        "./compiled",
        "./node_modules"
    ]
}